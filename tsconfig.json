{
  "compilerOptions": {
    "paths": {
      "@modules/*": ["./src/modules/*"],
      "@config/*": ["./src/config/*"],
      "@database/*": ["src/database/*"],
      "@filters/*": ["src/filters/*"],
      "@guards/*": ["src/guards/*"],
      "@enums/*": ["src/enums/*"],
      "@providers/*": ["src/providers/*"],
      "@pipes/*": ["src/pipes/*"],
      "@interceptors/*": ["src/interceptors/*"],
      "@utils/*": ["src/utils/*"],
      "@common/*": ["src/common/*"]
    },
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true
  }
}
